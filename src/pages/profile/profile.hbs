<div class="profile-page">
    <button class="profile-page__back-btn btn" navigateTo="chats"></button>

    <div class="profile-page__container">
        <img class="avatar profile-page__avatar "
            src="https://gameguru.ru/media/cache/45/9c/459c81dc249d02cbf7c2030c8eb8f62a.jpg">
        <p class="profile-page__name">
            Иван
        </p>
        {{> SettingForm}}
        {{#if disabled}}
